<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="586dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:gravity="fill_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="75sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnlimpiar"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="C"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btninfo"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="INFO"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btndividir"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="/"
                android:textSize="55sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnsiete"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="7"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btnocho"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="8"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btnnueve"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="9"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btnmultiplicar"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="*"
                android:textSize="55sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncuatro"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="4"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btncinco"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="5"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btnseis"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="6"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btnrestar"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="-"
                android:textSize="55sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnuno"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="1"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btndos"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="2"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btntres"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="3"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btnsumar"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="+"
                android:textSize="55sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncero"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btnpunto"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="."
                android:textSize="55sp" />

            <Button
                android:id="@+id/btnresultado"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="="
                android:textSize="55sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>